package entree.classe.derive;

public class Joueur{

	private int _nbPlayers;
	private String action;
	
	public Joueur(int n){
		_nbPlayers = n;
	}
	
	public String play(int n){
		return "Player n° "+n+" plays "+action;
	}
	
	public String recoitDonnees() {
		
		return "nb joueurs : "+_nbPlayers+" |\n";
	}

}
